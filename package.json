{
  "name": "@twg-group/container-manager",
  "version": "1.0.4",
  "description": "Container management for Docker, Swarm, Kubernetes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "author": "Matvey Alekseev",
  "license": "MIT",
  "keywords": ["container", "docker", "kubernetes", "manager"],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@twg-group/nestjs-logger": "^1.0.29",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dockerode": "^4.0.7",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/dockerode": "^3.3.42",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "cache-manager": "^6.4.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "file-type": "^20.4.1",
    "globals": "^16.0.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "keyv": "^5.3.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@7.x": "8.1.0",
      "test-exclude@6.x": "^7.0.0",
      "babel-plugin-istanbul@6.x": "^7.0.0"
    },
    "ignoredBuiltDependencies": [
      "cpu-features",
      "protobufjs",
      "ssh2",
      "unrs-resolver"
    ],
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@dto/(.*)$": "<rootDir>/container/dto/$1",
      "^@dto$": "<rootDir>/container/dto/index",
      "^@strategies/(.*)$": "<rootDir>/container/strategies/$1",
      "^@strategies$": "<rootDir>/container/strategies/index"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twg-group/container-manager.git"
  },
  "bugs": {
    "url": "https://github.com/twg-group/container-manager/issues"
  },
  "files": [
    "dist/**/!(*.spec|*.e2e-spec|*.fixture).{js,d.ts}",
    "README.md"
  ]
}
